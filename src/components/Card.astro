---
export interface Props {
  title: string
  body: string
  href: string
  type: string
  tags: {
    title: string
    metadata: {
      color?: string
    }
  }[]
}

const { href, title, type, body } = Astro.props
---

<li class="list-none rounded-md bg-white shadow-md transition hover:shadow-xl">
  <a href={`/${type}/${href}`}>
    <div class="flex h-full flex-col gap-y-2 p-6">
      <h2 class="pr-4 pt-2 text-xl font-semibold">
        {title}
      </h2>
      <p>
        {body}
      </p>
    </div>
  </a>
</li>
