---
import Footer from '@components/Footer.astro'
import Metadata from '@components/Metadata.astro'
import Navigation from '@components/Navigation.astro'
const { title, description, imageUrl } = Astro.props
import { ViewTransitions } from 'astro:transitions'
---

<!DOCTYPE html>
<html lang="en" class="light">
  <head>
    <Metadata title={title} description={description} imageUrl={imageUrl} />
    <ViewTransitions />
    
    <link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
  </head>
  <body>
    <Navigation />
    <main 
      class="flex flex-col min-h-screen container flex-grow max-w-screen-lg px-5 mx-auto my-12 md:px-12 lg:px-20">
      <slot />
    </main>
    <Footer />
  </body>
</html>
