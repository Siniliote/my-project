---
import Base from '@layouts/Base.astro'

interface Props {
  error: unknown
}

const { error } = Astro.props
---

<Base>
  <div class="flex flex-col items-center">
    <h1 class="text-[120px] font-extrabold text-gray-700">500</h1>
    <p class="mb-6 text-2xl font-medium text-gray-600">
      {error instanceof Error ? error.message : 'Erreur inconnue'}
    </p>
    <a
      href="/"
      class="rounded-md bg-indigo-500 px-4 py-2 font-medium text-white transition-all duration-200 ease-in-out hover:bg-indigo-600">
      Go Home
    </a>
  </div>
</Base>
