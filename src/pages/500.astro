---
import '@assets/styles/global.css';

import Base from "@layouts/Base.astro";

interface Props {
    error: unknown
}

const { error } = Astro.props
---

<Base>
    <div class="flex flex-col items-center">
        <h1 class="text-[120px] font-extrabold text-gray-700">500</h1>
        <p class="text-2xl font-medium text-gray-600 mb-6">{error instanceof Error ? error.message : 'Erreur inconnue'}</p>
        <a href="/"
            class="px-4 py-2 font-medium text-white bg-indigo-500 rounded-md hover:bg-indigo-600 transition-all duration-200 ease-in-out">
            Go Home
        </a>
    </div>
</Base>